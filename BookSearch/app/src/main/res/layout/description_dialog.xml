<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@color/colorPrimary"
    android:layout_gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/content"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Title"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:fontFamily="serif"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="2sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="2sp"
        android:background="@drawable/image_bg_cirlce"
        android:backgroundTint="@color/dialog_title"
        android:padding="8dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/image_bg_cirlce"
        android:backgroundTint="@color/dialog_author"
        android:text="Title"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:fontFamily="serif"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="2sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="2sp"
        android:padding="8dp"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/pages"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/dialog_pages"
            android:text="Page\n456"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="serif"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeStepGranularity="2sp"/>
        <TextView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/dialog_category"
            android:text="category\n"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeStepGranularity="2sp"/>
        <TextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/dialog_buy"
            android:textStyle="bold"
            android:text="Buy"
            android:gravity="center"
            android:fontFamily="serif"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeStepGranularity="2sp"/>

    </LinearLayout>








</LinearLayout>